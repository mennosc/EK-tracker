@model EK_tracker.Models.UserModel;

<div class="container">
    <h1>Register Account</h1>
    <form method="post" asp-controller="Register" asp-action="Index">
        <div class="container">
            <div class="form-group">
                <label>Username</label>
                <input asp-for="UserName" type="text" />
            </div>

            <div class="form-group">
                <label>First Name</label>
                <input asp-for="FirstName" type="text" />
            </div>

            <div class="form-group">
                <label>Last Name</label>
                <input asp-for="LastName" type="text" />
            </div>

            <div class="form-group">
                <label>Email</label>
                <input asp-for="Email" type="text" />
            </div>

            <div class="form-group">
                <label>Password</label>
                <input asp-for="Password" type="text" />
            </div>

            <input type="submit" class="btn btn-primary mt-3" value="Register!" />
        </div>
    </form>
</div>