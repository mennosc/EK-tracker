@model EK_tracker.Models.UserModel;

<div class="container">
    <h1>Log In</h1>
    <form method="post" asp-controller="Login" asp-action="Index">
        <div class="container">
            <div class="form-group">
                <label>Username</label>
                <input asp-for="UserName" type="text" />
            </div

            <div class="form-group">
                <label>Password</label>
                <input asp-for="Password" type="text" />
            </div>

            <p>No account yet? <a asp-controller="register" asp-action="index">Register</a></p>
            <input type="submit" class="btn btn-primary mt-3" value="Log In!" />
        </div>
    </form>
</div>